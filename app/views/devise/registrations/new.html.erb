<head>
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
</head>
<div class="signin_signup">
  <div class="container-fluid">
    <h1>Welcome to BillMate</h1>
    <h3>Manage and split roommate bills and expenses with ease.</h3>
  </div>
</div>


    <%= devise_error_messages! %>
    <div class="col-md-6 col-md-offset-4">
    <div class="signup-box">
      <div class="signup-text">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>
      <div class="form-group">
        <%= f.submit "Sign up" %>
      </div>
      <% end %>
    </div>


</div>
