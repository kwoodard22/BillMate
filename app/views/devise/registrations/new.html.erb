<div class="signin_signup">

  <%= image_tag 'welcome4.jpg' %>
  <h3>Manage and split house bills with ease!</h3>
    <div class="row">
      <div class="col-xs-3">
        <div class="signup_box">
        <h2>Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>

        <div class="form-group">
          <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-xs-9">
     <%= image_tag 'books.jpg' %>
    </div>
  </div>
</div>

