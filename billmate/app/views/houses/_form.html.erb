<%= form_for(@house) do |f| %>
  <% if @house.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>
      <ul>
        <% @house.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3>House Name</h3>
  <div class="field">
    <%= f.text_field :name %><br><br>
  </div>

  <h3>Roommates:</h3>
  <%= f.fields_for :roommates do |builder| %>
    <%= render 'roommate_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Roommate", f, :roommates %><br><br>

  <div class="actions">
    <%= f.submit "Create my house profile" %>
  </div>
<% end %>
